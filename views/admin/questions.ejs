<%- include('../partials/header', { title: 'Вопросы - ' + subject.name }) %>

<div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-0"><i class="bi bi-question-circle-fill text-primary"></i> <%= subject.name %></h2>
            <p class="text-muted mb-0">
                Управление вопросами по предмету
                <% 
                let totalQuestions = 0;
                if (tests && tests.length > 0) {
                    tests.forEach(test => {
                        totalQuestions += test.Questions ? test.Questions.length : 0;
                    });
                }
                %>
                <span class="badge bg-primary ms-2">Всего вопросов: <%= totalQuestions %></span>
            </p>
        </div>
        <div class="btn-group">
            <a href="/admin/subjects/<%= subject.id %>/questions/direct" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle"></i> Добавить вопрос
            </a>
            <a href="/admin/subjects/<%= subject.id %>/upload-pdf" class="btn btn-info btn-lg">
                <i class="bi bi-file-earmark-pdf"></i> Загрузить из PDF
            </a>
        </div>
    </div>
</div>

<% if (typeof query !== 'undefined' && query.success) { %>
    <div class="alert alert-success alert-dismissible fade show">
        <%= query.success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% 
let allQuestions = [];
if (tests && tests.length > 0) {
    tests.forEach(test => {
        if (test.Questions && test.Questions.length > 0) {
            test.Questions.forEach(question => {
                allQuestions.push({
                    ...question.toJSON(),
                    testTitle: test.title,
                    testId: test.id
                });
            });
        }
    });
}
%>

<% if (allQuestions.length > 0) { %>
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-list-ul"></i> Все вопросы (<%= allQuestions.length %>)</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th width="45%">Вопрос</th>
                            <th width="10%">Тип</th>
                            <th width="10%">Ответов</th>
                            <th width="15%">Тест</th>
                            <th width="15%">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% allQuestions.forEach((question, index) => { %>
                            <tr>
                                <td><strong><%= index + 1 %></strong></td>
                                <td>
                                    <div class="text-truncate" style="max-width: 400px;" title="<%= question.text %>">
                                        <%= question.text %>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info"><%= question.type %></span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary"><%= question.Answers ? question.Answers.length : 0 %></span>
                                </td>
                                <td>
                                    <small class="text-muted"><%= question.testTitle %></small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="/admin/questions/<%= question.id %>/edit" class="btn btn-outline-primary" title="Редактировать">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="POST" action="/admin/questions/<%= question.id %>/delete" class="d-inline" 
                                              onsubmit="return confirm('Вы уверены, что хотите удалить этот вопрос?');">
                                            <button type="submit" class="btn btn-outline-danger" title="Удалить">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<% } else { %>
    <div class="alert alert-info">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-info-circle"></i> По этому предмету еще нет вопросов. 
                Начните добавлять вопросы прямо сейчас!
            </div>
            <a href="/admin/subjects/<%= subject.id %>/questions/direct" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Добавить первый вопрос
            </a>
        </div>
    </div>
<% } %>

<div class="mt-4">
    <a href="/admin/subjects" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Назад к предметам
    </a>
</div>

<%- include('../partials/footer') %>

