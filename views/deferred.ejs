<%- include('partials/header', { title: 'Отложенные вопросы' }) %>

<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header bg-info text-white">
                <h3 class="mb-0"><i class="bi bi-bookmark-fill"></i> Отложенные вопросы</h3>
            </div>
            <div class="card-body">
                <% if (questions && questions.length > 0) { %>
                    <p class="text-muted">Всего отложенных вопросов: <strong><%= questions.length %></strong></p>
                    <div class="alert alert-warning">
                        <i class="bi bi-info-circle"></i> 
                        Эти вопросы были отложены во время прохождения теста. 
                        Вы можете ответить на них сейчас или вернуться к тесту.
                    </div>
                    
                    <form id="deferredForm">
                        <% questions.forEach((question, index) => { 
                            const test = question.Test;
                        %>
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h5 class="mb-0">Вопрос #<%= index + 1 %></h5>
                                    <% if (test) { %>
                                        <small class="text-muted">
                                            Тест: <strong><%= test.title %></strong> | 
                                            Предмет: <strong><%= test.subject %></strong>
                                        </small>
                                    <% } %>
                                </div>
                                <div class="card-body">
                                    <p class="fw-bold"><%= question.text %></p>
                                    
                                    <% if (question.Answers && question.Answers.length > 0) { %>
                                        <div class="answers mt-3">
                                            <% if (question.type === 'single') { %>
                                                <% question.Answers.forEach(answer => { %>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" 
                                                               name="question_<%= question.id %>" 
                                                               id="answer_<%= answer.id %>" 
                                                               value="<%= answer.id %>">
                                                        <label class="form-check-label" for="answer_<%= answer.id %>">
                                                            <%= answer.text %>
                                                        </label>
                                                    </div>
                                                <% }); %>
                                            <% } else if (question.type === 'multiple') { %>
                                                <% question.Answers.forEach(answer => { %>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" 
                                                               name="question_<%= question.id %>" 
                                                               id="answer_<%= answer.id %>" 
                                                               value="<%= answer.id %>">
                                                        <label class="form-check-label" for="answer_<%= answer.id %>">
                                                            <%= answer.text %>
                                                        </label>
                                                    </div>
                                                <% }); %>
                                            <% } else if (question.type === 'text') { %>
                                                <textarea class="form-control" name="question_<%= question.id %>" rows="3"></textarea>
                                            <% } %>
                                        </div>
                                    <% } %>
                                    
                                    <div class="mt-3">
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                onclick="removeDeferred(<%= question.id %>)">
                                            <i class="bi bi-bookmark"></i> Удалить из отложенных
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                        
                        <div class="card">
                            <div class="card-body">
                                <button type="button" class="btn btn-primary" onclick="clearDeferred()">
                                    <i class="bi bi-check-circle"></i> Очистить все отложенные
                                </button>
                            </div>
                        </div>
                    </form>
                <% } else { %>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> У вас пока нет отложенных вопросов.
                        <br>Откладывайте вопросы во время прохождения тестов, чтобы вернуться к ним позже!
                    </div>
                <% } %>
            </div>
        </div>
        
        <div class="mb-3">
            <a href="/tests/emulator" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Вернуться к тестам
            </a>
        </div>
    </div>
</div>

<script>
async function removeDeferred(questionId) {
    try {
        const response = await fetch('/api/deferred/remove', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ questionId })
        });
        
        const data = await response.json();
        
        if (data.success) {
            location.reload();
        } else {
            alert('Ошибка при удалении из отложенных');
        }
    } catch (error) {
        console.error('Ошибка:', error);
        alert('Ошибка при удалении из отложенных');
    }
}

async function clearDeferred() {
    if (!confirm('Очистить все отложенные вопросы?')) {
        return;
    }
    
    try {
        const questions = document.querySelectorAll('[name^="question_"]');
        const questionIds = new Set();
        
        questions.forEach(input => {
            const name = input.name;
            const questionId = name.split('_')[1];
            questionIds.add(parseInt(questionId));
        });
        
        // Удаляем все отложенные вопросы
        for (const questionId of questionIds) {
            await fetch('/api/deferred/remove', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ questionId })
            });
        }
        
        location.reload();
    } catch (error) {
        console.error('Ошибка:', error);
        alert('Ошибка при очистке отложенных');
    }
}
</script>

<%- include('partials/footer') %>


