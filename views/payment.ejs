<%- include('partials/header', { title: 'Оплата подписки' }) %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="card shadow-lg mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-credit-card"></i> Оплата подписки</h4>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <h5>Выбранная подписка:</h5>
                    <p class="mb-1"><strong>Тип:</strong> <%= subscription.typeText %></p>
                    <p class="mb-1"><strong>Длительность:</strong> <%= subscription.durationText %></p>
                    <p class="mb-0"><strong>Базовая цена:</strong> <span class="h4 text-primary"><%= subscription.basePrice %> сом</span></p>
                </div>

                <hr>

                <!-- Форма регистрации (только для неавторизованных пользователей) -->
                <% if (typeof user === 'undefined' || !user) { %>
                    <div class="alert alert-info mb-4">
                        <h5><i class="bi bi-info-circle"></i> Регистрация</h5>
                        <p class="mb-0">Для оформления подписки необходимо заполнить данные регистрации. Аккаунт будет создан после успешной оплаты.</p>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0"><i class="bi bi-person-plus"></i> Данные для регистрации</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="nickname" class="form-label">Никнейм <span class="text-danger">*</span>:</label>
                                <input type="text" class="form-control" id="nickname" name="nickname" required minlength="3" maxlength="50" 
                                       value="<%= typeof registrationData !== 'undefined' && registrationData ? registrationData.nickname || '' : '' %>">
                                <small class="text-muted">Минимум 3 символа</small>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email <span class="text-danger">*</span>:</label>
                                <input type="email" class="form-control" id="email" name="email" required 
                                       value="<%= typeof registrationData !== 'undefined' && registrationData ? registrationData.email || '' : '' %>">
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Пароль <span class="text-danger">*</span>:</label>
                                <input type="password" class="form-control" id="password" name="password" required minlength="6"
                                       value="<%= typeof registrationData !== 'undefined' && registrationData ? registrationData.password || '' : '' %>">
                                <small class="text-muted">Минимум 6 символов</small>
                            </div>
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Подтверждение пароля <span class="text-danger">*</span>:</label>
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required
                                       value="<%= typeof registrationData !== 'undefined' && registrationData ? registrationData.password || '' : '' %>">
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="publicOffer" name="publicOffer" required
                                       <%= typeof registrationData !== 'undefined' && registrationData && registrationData.publicOffer ? 'checked' : '' %>>
                                <label class="form-check-label" for="publicOffer">
                                    Я согласен с <a href="#" target="_blank">публичной офертой</a> <span class="text-danger">*</span>
                                </label>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="dataConsent" name="dataConsent" required
                                       <%= typeof registrationData !== 'undefined' && registrationData && registrationData.dataConsent ? 'checked' : '' %>>
                                <label class="form-check-label" for="dataConsent">
                                    Я согласен на обработку персональных данных <span class="text-danger">*</span>
                                </label>
                            </div>
                        </div>
                    </div>
                <% } %>

                <form method="POST" action="/payment/purchase" id="paymentForm" onsubmit="event.preventDefault(); return false;">
                    <input type="hidden" name="subscriptionType" value="<%= subscription.type %>">
                    <input type="hidden" name="subscriptionDuration" value="<%= subscription.duration %>">

                    <!-- Реферальный код -->
                    <div class="mb-4">
                        <label for="referralCode" class="form-label fw-bold">
                            <i class="bi bi-gift"></i> Реферальный код (необязательно):
                        </label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="referralCode" name="referralCode" 
                                   placeholder="Введите реферальный код" maxlength="50">
                            <button type="button" class="btn btn-outline-primary" id="checkReferralBtn">
                                <i class="bi bi-check-circle"></i> Проверить
                            </button>
                        </div>
                        <div id="referralResult" class="mt-2"></div>
                        <small class="text-muted">Если у вас есть реферальный код, введите его здесь. После покупки подписки вы и пригласивший получите по 50 бонусов.</small>
                    </div>

                    <!-- Бонусы -->
                    <% if (user.bonusBalance && user.bonusBalance > 0) { %>
                        <div class="mb-4">
                            <label for="bonusAmount" class="form-label fw-bold">
                                <i class="bi bi-wallet2"></i> Использовать бонусов (до <%= user.bonusBalance %>):
                            </label>
                            <input type="number" class="form-control" id="bonusAmount" name="bonusAmount" 
                                   min="0" max="<%= user.bonusBalance %>" value="0" onchange="calculateTotal()">
                            <small class="text-muted">1 бонус = 1 сом. Можно использовать частично или полностью.</small>
                        </div>
                    <% } else { %>
                        <input type="hidden" name="bonusAmount" value="0">
                    <% } %>

                    <!-- Итоговая сумма -->
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Итого к оплате:</h5>
                            <div class="row">
                                <div class="col-6">
                                    <p class="mb-1">Базовая цена:</p>
                                    <p class="mb-1" id="referralDiscountRow" style="display: none;">Скидка по реферальному коду:</p>
                                    <p class="mb-1" id="bonusRow" style="display: none;">Бонусы:</p>
                                    <p class="mb-1" id="referralBonusRow" style="display: none;" class="text-success">
                                        <i class="bi bi-gift"></i> Бонусы после покупки:
                                    </p>
                                    <hr>
                                    <p class="mb-0 fw-bold">К оплате:</p>
                                </div>
                                <div class="col-6 text-end">
                                    <p class="mb-1"><%= subscription.basePrice %> сом</p>
                                    <p class="mb-1 text-success" id="referralDiscountAmount" style="display: none;">-0 сом</p>
                                    <p class="mb-1 text-info" id="bonusAmount" style="display: none;">-0 сом</p>
                                    <p class="mb-1 text-success small" id="referralBonusInfo" style="display: none;">
                                        <i class="bi bi-info-circle"></i> После оплаты: +50 бонусов
                                    </p>
                                    <hr>
                                    <p class="mb-0 fw-bold h4 text-primary" id="totalAmount"><%= subscription.basePrice %> сом</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-primary btn-lg" id="proceedToPaymentBtn">
                            <i class="bi bi-arrow-right-circle"></i> Перейти к оплате
                        </button>
                        <a href="/subscription" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Вернуться к выбору подписки
                        </a>
                    </div>
                </form>
                
                <!-- Индикатор загрузки -->
                <div id="loadingIndicator" class="text-center mt-3" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Загрузка...</span>
                    </div>
                    <p class="mt-2">Создание платежа...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
let basePrice = <%= subscription.basePrice %>;
let referralCodeApplied = false;
let referralDiscount = 0;

function calculateTotal() {
    const bonusAmount = parseInt(document.getElementById('bonusAmount')?.value || 0);
    const bonusBalance = <%= user.bonusBalance || 0 %>;
    const bonusToUse = Math.min(bonusAmount, bonusBalance, basePrice - referralDiscount);
    
    // Реферальный код дает скидку 50 сом
    const total = Math.max(0, basePrice - referralDiscount - bonusToUse);

    // Обновляем отображение
    document.getElementById('totalAmount').textContent = total + ' сом';
    
    if (referralDiscount > 0) {
        document.getElementById('referralDiscountRow').style.display = 'block';
        document.getElementById('referralDiscountAmount').textContent = '-' + referralDiscount + ' сом';
    } else {
        document.getElementById('referralDiscountRow').style.display = 'none';
    }
    
    if (bonusToUse > 0) {
        document.getElementById('bonusRow').style.display = 'block';
        document.getElementById('bonusAmount').textContent = '-' + bonusToUse + ' сом';
    } else {
        document.getElementById('bonusRow').style.display = 'none';
    }

    if (referralCodeApplied) {
        document.getElementById('referralBonusRow').style.display = 'block';
        document.getElementById('referralBonusInfo').style.display = 'block';
    } else {
        document.getElementById('referralBonusRow').style.display = 'none';
        document.getElementById('referralBonusInfo').style.display = 'none';
    }
}

document.getElementById('checkReferralBtn')?.addEventListener('click', async function() {
    const referralCode = document.getElementById('referralCode').value.trim();
    const resultDiv = document.getElementById('referralResult');
    
    if (!referralCode) {
        resultDiv.innerHTML = '<div class="alert alert-warning">Введите реферальный код</div>';
        return;
    }

    this.disabled = true;
    this.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Проверка...';

    try {
        const response = await fetch('/payment/check-referral', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                referralCode: referralCode
            })
        });

        const data = await response.json();

        if (data.error) {
            resultDiv.innerHTML = '<div class="alert alert-danger">' + data.error + '</div>';
            referralCodeApplied = false;
            referralDiscount = 0;
            document.getElementById('referralCode').value = '';
        } else if (data.success) {
            referralCodeApplied = true;
            referralDiscount = data.discount || 50; // Скидка 50 сом
            resultDiv.innerHTML = '<div class="alert alert-success"><i class="bi bi-check-circle"></i> ' + data.message + '</div>';
        }

        calculateTotal();
    } catch (error) {
        resultDiv.innerHTML = '<div class="alert alert-danger">Ошибка при проверке реферального кода</div>';
        referralCodeApplied = false;
    } finally {
        this.disabled = false;
        this.innerHTML = '<i class="bi bi-check-circle"></i> Проверить';
    }
});

// Применение реферального кода по Enter
document.getElementById('referralCode')?.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
        e.preventDefault();
        document.getElementById('checkReferralBtn').click();
    }
});

// Инициализация расчета
calculateTotal();

// Обработка кнопки "Перейти к оплате"
document.getElementById('proceedToPaymentBtn')?.addEventListener('click', async function() {
    const form = document.getElementById('paymentForm');
    
    // Получаем значения из скрытых полей или используем значения из шаблона
    const subscriptionTypeInput = form.querySelector('input[name="subscriptionType"]');
    const subscriptionDurationInput = form.querySelector('input[name="subscriptionDuration"]');
    
    // Используем значения из input или fallback на значения из шаблона
    const subscriptionType = (subscriptionTypeInput && subscriptionTypeInput.value) ? subscriptionTypeInput.value : '<%= subscription.type %>';
    const subscriptionDuration = (subscriptionDurationInput && subscriptionDurationInput.value) ? subscriptionDurationInput.value : '<%= subscription.duration %>';
    const bonusAmount = form.querySelector('input[name="bonusAmount"]')?.value || '0';
    const referralCode = form.querySelector('input[name="referralCode"]')?.value || '';
    
    // Формируем JSON данные
    const requestData = {
        subscriptionType: subscriptionType.trim(),
        subscriptionDuration: parseInt(subscriptionDuration),
        bonusAmount: parseInt(bonusAmount) || 0,
        referralCode: referralCode.trim()
    };
    
    // Если пользователь не авторизован, добавляем данные регистрации
    const userIsAuthenticated = <%= typeof user !== 'undefined' && user ? 'true' : 'false' %>;
    if (!userIsAuthenticated) {
        const nickname = document.getElementById('nickname')?.value.trim();
        const email = document.getElementById('email')?.value.trim();
        const password = document.getElementById('password')?.value;
        const confirmPassword = document.getElementById('confirmPassword')?.value;
        const publicOffer = document.getElementById('publicOffer')?.checked;
        const dataConsent = document.getElementById('dataConsent')?.checked;
        
        // Валидация данных регистрации
        if (!nickname || nickname.length < 3) {
            alert('Никнейм должен быть не менее 3 символов');
            document.getElementById('nickname')?.focus();
            return;
        }
        
        if (!email || !email.includes('@')) {
            alert('Введите корректный email');
            document.getElementById('email')?.focus();
            return;
        }
        
        if (!password || password.length < 6) {
            alert('Пароль должен быть не менее 6 символов');
            document.getElementById('password')?.focus();
            return;
        }
        
        if (password !== confirmPassword) {
            alert('Пароли не совпадают');
            document.getElementById('confirmPassword')?.focus();
            return;
        }
        
        if (!publicOffer || !dataConsent) {
            alert('Необходимо согласиться с условиями');
            return;
        }
        
        requestData.nickname = nickname;
        requestData.email = email;
        requestData.password = password;
        requestData.publicOffer = publicOffer;
        requestData.dataConsent = dataConsent;
    }
    
    console.log('Отправка данных:', requestData);
    console.log('Проверка полей формы:', {
        subscriptionTypeInput: subscriptionTypeInput?.value,
        subscriptionDurationInput: subscriptionDurationInput?.value,
        subscriptionTypeFinal: requestData.subscriptionType,
        subscriptionDurationFinal: requestData.subscriptionDuration
    });
    
    const loadingIndicator = document.getElementById('loadingIndicator');
    const proceedBtn = document.getElementById('proceedToPaymentBtn');
    
    // Показываем индикатор загрузки
    proceedBtn.disabled = true;
    proceedBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Создание платежа...';
    loadingIndicator.style.display = 'block';
    
    try {
        const response = await fetch('/payment/purchase', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify(requestData),
            redirect: 'manual' // Не следовать за редиректами автоматически
        });
        
        // Обрабатываем разные типы ответов
        if (response.ok) {
            // Успешный ответ (200-299)
            const contentType = response.headers.get('content-type');
            
            if (contentType && contentType.includes('application/json')) {
                // JSON ответ
                const data = await response.json();
                
                if (data.error) {
                    alert('Ошибка: ' + data.error);
                    proceedBtn.disabled = false;
                    proceedBtn.innerHTML = '<i class="bi bi-arrow-right-circle"></i> Перейти к оплате';
                    loadingIndicator.style.display = 'none';
                } else if (data.paymentUrl) {
                    // Переходим на страницу оплаты Finik
                    window.location.href = data.paymentUrl;
                } else {
                    alert('Не получен URL для оплаты');
                    proceedBtn.disabled = false;
                    proceedBtn.innerHTML = '<i class="bi bi-arrow-right-circle"></i> Перейти к оплате';
                    loadingIndicator.style.display = 'none';
                }
            } else {
                // HTML ответ или другой формат
                alert('Неожиданный формат ответа. Попробуйте еще раз.');
                proceedBtn.disabled = false;
                proceedBtn.innerHTML = '<i class="bi bi-arrow-right-circle"></i> Перейти к оплате';
                loadingIndicator.style.display = 'none';
            }
        } else if (response.status === 302 || response.status === 301) {
            // Редирект - получаем URL из заголовка Location
            const location = response.headers.get('Location');
            if (location) {
                window.location.href = location;
            } else {
                alert('Ошибка: получен редирект без URL');
                proceedBtn.disabled = false;
                proceedBtn.innerHTML = '<i class="bi bi-arrow-right-circle"></i> Перейти к оплате';
                loadingIndicator.style.display = 'none';
            }
        } else {
            // Ошибка
            let errorMessage = 'Ошибка при создании платежа';
            try {
                const data = await response.json();
                if (data.error) {
                    errorMessage = data.error;
                }
            } catch (e) {
                const text = await response.text();
                if (text) {
                    errorMessage = text.substring(0, 200);
                }
            }
            
            alert(errorMessage);
            proceedBtn.disabled = false;
            proceedBtn.innerHTML = '<i class="bi bi-arrow-right-circle"></i> Перейти к оплате';
            loadingIndicator.style.display = 'none';
        }
    } catch (error) {
        console.error('Ошибка:', error);
        alert('Ошибка при создании платежа: ' + error.message);
        proceedBtn.disabled = false;
        proceedBtn.innerHTML = '<i class="bi bi-arrow-right-circle"></i> Перейти к оплате';
        loadingIndicator.style.display = 'none';
    }
});
</script>

<%- include('partials/footer') %>

